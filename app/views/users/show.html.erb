<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <% if @user.profile? %>
      <p><%= @user.profile %></p>
      <% end %>
      <% if current_user == @user %>
        <span><%= link_to "내 정보 수정", edit_user_registration_path %> </span>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if user_signed_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.nanoposts.any? %>
      <h3>글 목록 (<%= @user.nanoposts.count %>)</h3>
      <ol class="nanoposts">
        <%= render @nanoposts %>
      </ol>
      <%= will_paginate @nanoposts %>
    <% end %>
  </div>
</div>
