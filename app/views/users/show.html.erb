<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1>
        <%= @user.name %> 
        <% if current_user == @user %>
          <a href="<%= edit_user_registration_path %>" class="btn btn-default btn-xs">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          </a>
      <% end %>
      </h1>
      <% if @user.profile? %>
      <p><%= @user.profile %></p>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if user_signed_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.nanoposts.any? %>
      <h3>글 목록 (<%= @user.nanoposts.count %>)</h3>
      <ol class="nanoposts">
        <%= render @nanoposts %>
      </ol>
      <%= will_paginate @nanoposts %>
    <% end %>
  </div>
</div>
