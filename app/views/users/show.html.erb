<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.nanoposts.any? %>
      <h3>Nanoposts (<%= @user.nanoposts.count %>)</h3>
      <ol class="nanoposts">
        <%= render @nanoposts %>
      </ol>
      <%= will_paginate @nanoposts %>
    <% end %>
  </div>
</div>
