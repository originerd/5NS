<li id="nanopost-<%= nanopost.id %>">
  <%= link_to gravatar_for(nanopost.user, size: 50), nanopost.user %>
  <span class="user"><%= link_to nanopost.user.name, nanopost.user %></span>
  <span class="content">
    <%= nanopost.content %>
    <% if user_signed_in? %>
      <div id="likes_form-<%= nanopost.id %>">
        <% if nanopost.likes.find_by(user: current_user).present? %>
          <%= render 'nanoposts/unlike', nanopost: nanopost %>
        <% else %>
          <%= render 'nanoposts/like', nanopost: nanopost %>
        <% end %>
      </div>
    <% end %>
    <% if nanopost.picture? %>
      <span class="content-image">
        <%= link_to nanopost.picture.url, class: "image-link" do %>
          <%= image_tag nanopost.picture.url, class: "img-responsive" %>
        <% end %>
      </span>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(nanopost.created_at) %> ago.
    <% if current_user == nanopost.user %>
      <%= link_to "delete", nanopost, method: :delete,
                                      data: { confirm: "정말 삭제하시겠습니까?" } %>
    <% end %>
  </span>
</li>