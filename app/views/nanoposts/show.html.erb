<% provide(:title, @nanopost.content) %>
<header>
  <section class="user_info">
    <%= render 'shared/user_info' %>
  </section>
  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
</header>
<div class="container margin-top margin-bottom">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-padding-7">
      <div class="inner-box">
        <ol class="nanoposts">
          <%= render @nanopost %>
        </ol>
      </div>
    </div>
  </div>
</div>