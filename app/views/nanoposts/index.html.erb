<p id="notice"><%= notice %></p>

<h1>Listing Nanoposts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nanoposts.each do |nanopost| %>
      <tr>
        <td><%= nanopost.user %></td>
        <td><%= nanopost.content %></td>
        <td><%= link_to 'Show', nanopost %></td>
        <td><%= link_to 'Edit', edit_nanopost_path(nanopost) %></td>
        <td><%= link_to 'Destroy', nanopost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

